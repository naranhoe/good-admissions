<!-- <p id="notice"><%= notice %></p> -->

  <div class="row col-md-12 text-center">
    <div id="payment-listing">
      <h2>All Payments</h2>
    </div>
  </div>

  <div class="container text-center">
    <div class="search-field col-md-12">
      <%= form_tag(payments_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search for Payments", style: "width: 300px;" %>
      <%= submit_tag "Search", class: "btn btn-info" %>
      <% end %>

      <% if @search_payments.empty? == false %>
        <%= render "search_student" %>
      <% elsif params[:search].present? && @search_payments.empty? %>
        <p>There are no posts containing the term(s) <%= "#{params[:search]}" %>.</p>
      <% end %>
    </div>
  </div>

  <div class="container text-center">
    <div class='date-field col-md-12'>
      <p>From: <input type="text" id="from-datepicker"> </p>
      <p>To: <input type="text" id="to-datepicker"></p>
      <%= submit_tag "Find", class: "btn btn-info" %>
    </div>
  </div>
<br>

<div class="row">
    <div class="col-md-12 text-center">
      <div class="btn-group " role="group" id="listing-payments-btn-group">
        <div button type="button" class="btn btn-info">
          <%= link_to('Stripes', stripes_path, class: "btn-text-color") %>
        </div>
        <div button type="button" class="btn btn-info">
          <%= link_to('Loans', loans_path, class: "btn-text-color") %>
        </div>
        <div button type="button" class="btn btn-info">
          <%= link_to('Checks', checks_path, class: "btn-text-color") %>
        </div>
        <div button type="button" class="btn btn-info">
          <%= link_to('Wires', wires_path, class: "btn-text-color") %>
        </div>
      </div>
    </div>
</div>

<div class="table-responsive col-md-8 col-md-offset-2">
  <table class="table table-hover">
    <thead>
      <tr class="well">
        <th>Payment Date</th>
        <th>Student</th>
        <th>Payment Type</th>
        <th>Amount</th>
        <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.pay_date.strftime("%m/%d/%Y") %></td>
          <td><%= payment.student.full_name %></td>
          <td><%= payment.class %></td>
          <td><%= number_to_currency(payment.amount) %></td>
          <td><%= link_to "Details", payment %></td>
          <td><%= link_to 'Remove', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center digg_pagination"><%= will_paginate @payments, :page_links => true %></div>
</div>
